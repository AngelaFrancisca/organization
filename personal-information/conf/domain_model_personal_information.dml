enum module.personalinformation.domain.IDDocumentType as IDDocumentType;
enum module.personalinformation.domain.Gender as Gender;
enum module.personalinformation.domain.MaritalStatus as MaritalStatus;


class module.personalinformation.domain.PersonalInformationSystem {
}


class module.personalinformation.domain.PersonalInformation {

	LocalDate birthDate;
	Gender gender;
	MaritalStatus maritalStatus;
	String fiscalCode;
			
	String fathersName;
	String mothersName;
	
	// Make units
	String birthDistrict;
