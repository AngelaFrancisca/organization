	}


/** Relations **/

relation MyOrgPersonalInformationSystem {
	myorg.domain.MyOrg playsRole myOrg;
	module.personalinformation.domain.PersonalInformationSystem playsRole personalInformationSystem;
}

relation MyOrgPersonalInformation {
	myorg.domain.MyOrg playsRole myOrg;
	module.personalinformation.domain.PersonalInformation playsRole personalInformations {
		multiplicity *;
	}
}

relation MyOrgIdentificationDocument {
	myorg.domain.MyOrg playsRole myOrg;
	module.personalinformation.domain.IdentificationDocument playsRole identificationDocuments {
		multiplicity *;
	}
}

relation PersonPersonalInformation {
	module.organization.domain.Person playsRole person;
	module.personalinformation.domain.PersonalInformation playsRole personalInformation;
}

relation PersonalInformationIdentificationDocument {
	module.personalinformation.domain.PersonalInformation playsRole personalInformation;
	module.personalinformation.domain.IdentificationDocument playsRole idDocument;
}
